TEMPLATES := "$CIT_BASE" + "/resources/templates"

help:
  @just --list

[no-cd]
python NAME='package_name' DESCRIPTION='package_description':
  cp -r {{TEMPLATES}}/python-pkg {{NAME}}
  cd {{NAME}} && bash -c "sed -i 's/<NAME>/$(basename {{NAME}})/g; s/<DESCRIPTION>/{{DESCRIPTION}}/g' pyproject.toml" && \
  bash -c "mv src/NAME src/$(echo {{NAME}} | sed 's/-/_/g')"